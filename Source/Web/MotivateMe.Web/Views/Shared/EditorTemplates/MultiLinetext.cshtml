@model string
<div class="row">
    <div class="col-md-2">
        @Html.LabelFor(m => m, new { @class = "control-label col-md-2" })
    </div>
    <div class="col-md-5">
        @Html.TextAreaFor(m => m, new { @class = "form-control" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<br />